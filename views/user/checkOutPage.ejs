<%-include ("headerlink-layout.ejs")  %> 
<%-include ("header-layout.ejs")  %> 

    <!-- Start Banner Area -->
    <section class="banner-area organic-breadcrumb">
        <div class="container">
            <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
                <div class="col-first">
                    <h1>Checkout</h1>
                    <nav class="d-flex align-items-center">
                        <a href="index.html">Home<span class="lnr lnr-arrow-right"></span></a>
                        <a href="single-product.html">Checkout</a>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- End Banner Area -->

    <!--================Checkout Area =================-->
    
   

    <section class="checkout_area section_gap">
        <div class="container">

            <p>
                <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                  Change Address
                </a>
              </p>
              <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    <form action="/changeAddress" method="post">
                        <!-- <option value="select">choose Address Here</option>-->
                        <select name="index" id="lang">
                            <% address.forEach(function(x,y){%> 
                          <option  value="<%= y %>" ><%= x.fullName%>,<%= x.address %>,<%= x.city %> <%= x.state %> ,<%= x.pincode%>  </option>
                          <% }) %> 
                        </select>
                        <input class="btn-info" type="submit" value="Submit" />
                    </form>
                    
                 
                </div>
              </div>


            <div class="billing_details">
                <div class="row">
                    <div class="col-lg-8">
                        <h3>Billing Details</h3>
                        <form class="row contact_form" action="#" method="post" novalidate="novalidate">

                            <div class="form-row">

                                <div class="col-md-6 mb-3">
                                  <label for="validationCustom3">fullName </label>
                                  <input type="text" name="fullName" class="form-control" id="validationCustom3" value="" placeholder="<%= selectedAddess.fullName%>"
                                    required />
                                </div>
                              </div>
                              <div class="form-group mb-3">
                                <label for="address-wpalaceholder">Address</label>
                                <input type="text" id="address-wpalaceholder" name="address"  class="form-control" placeholder="<%= selectedAddess.address%>"
                                  value="" />
                              </div>
                              <div class="form-group mb-3">
                                <label for="address-wpalaceholder">Phone Number</label>
                                <input type="number" id="address-wpalaceholder" name="phone" class="form-control" placeholder="<%= selectedAddess.phone%>"
                                  value="" />
                              </div>
                              <div class="form-row">
                                <div class="col-md-6 mb-3">
                                  <label for="validationCustom33">City</label>
                                  <input type="text" name="city" class="form-control" id="validationCustom33" value="" placeholder="<%= selectedAddess.city%>"
                                    required />
                                </div>
                                <div class="col-md-3 mb-3">
                                  <label for="validationSelect2">State</label>
                                  <input class="form-control" name="state" id="custom-zip" autocomplete="off" maxlength="9" placeholder="<%= selectedAddess.state%>"
                                    value="" required />
                                </div>
                                <div class="col-md-3 mb-3">
                                  <label for="custom-zip">pin code</label>
                                  <input class="form-control input-zip" name="pincode" id="custom-zip" autocomplete="off" placeholder="<%= selectedAddess.pincode%>"
                                    maxlength="9" value="" required />
                                </div>
                              </div>
        
                            <!-- <div class="col-md-12 form-group">
                                <div class="creat_account">
                                    <input type="checkbox" id="f-option2" name="selector">
                                    <label for="f-option2">Create an account?</label>
                                </div>
                            </div> -->
                            <!-- <div class="col-md-12 form-group">
            
                                <textarea class="form-control" name="message" id="message" rows="1" placeholder="Order Notes"></textarea>
                            </div> -->
                    </div>



                 <!-- <-==================- order_box ===========================--> 
                    <div class="col-lg-4">
                        <div class="order_box">
                            <h2>Your Order</h2>
                            <%cartProducts.forEach(function(x) {%> 
                            <ul class="list">
                                <li><a href="#">Product <span><%=x.productId.name%></span></a></li>
                            </ul>
                            <% }) %> 
                            <ul class="list list_2">
                                <li><a href="#">Subtotal <span>₹<%= totalAmount %> </span></a></li>
                                <li><a href="#">Shipping <span>FREE: ₹0.00</span></a></li>
                                <li><a href="#">Total <span>₹<%= totalAmount %></span></a></li>
                            </ul>
                            <a class="primary-btn" href="/confirmationPage">✔cach On delivery</a>
                           
                            <div class="creat_account">
                                <input type="checkbox" id="f-option4" name="selector"> 
                                <label for="f-option4">I’ve read and accept the </label>
                                <a href="#">terms & conditions*</a>
                            </div>
                            <a class="primary-btn" href="#">Proceed to Razorpay</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================End Checkout Area =================-->

   <%-include("footer-layout.ejs") %> 